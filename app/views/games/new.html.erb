<h1> New game </h1>
<% @letters.each do |letter| %>
<ul class='d-inline'>
  <li class='d-inline' ><%=letter%></li>
</ul>
<%end %>
<p> What is the longest word you can form? </p>
<form action="/score" method='post'>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type='hidden' name='starttime' value='<%= Time.now %>'>
    <input type='text' name='answer' value='word'>
    <input type='hidden' name='input' value='<%= @letters%>'>
    <input type='submit'>
</form>
